
<div>
    <h2 ng-cloak>{{title}}</h2>
	
	<!-- Global and Advance Search go here -->
    <a class="btn btn-primary" href="#/newClaim">New Claim</a>
	<button ng-click="onClick()" class="btn btn-default">Search</button>
	
	<table id="claims" class="table table-striped">
		<!-- Table Header here -->
		<thead>
			<tr>
				<th ng-repeat="header in headers">
                    {{header.name}}&nbsp;<a ng-click="sortBy(header.colName)">
					<i class="glyphicon glyphicon-sort" ng-show="header.colName != '' && header.sortDir == 0"></i>
					<i class="glyphicon glyphicon-chevron-down" ng-show="header.colName != '' && header.sortDir == -1"></i>
					<i class="glyphicon glyphicon-chevron-up" ng-show="header.colName != '' && header.sortDir == 1"></i>
					</a>
                </th>
            </tr>
		</thead>
		
		<!-- Use ng-repeat here to so the result -->
		<tbody>
			<tr ng-repeat="claim in claims">
				<td>{{claim.status}}</td>
				<td><a class="btn btn-default" href="#/claim/{{claim.claimID}}"><i class="glyphicon glyphicon-link"></i></a></td>
				<td>{{claim.buName}}</td>
				<td>{{claim.vendorName}}</td>
				<td>{{claim.programType}}</td>
				<td>{{claim.ftgProgramCode}}</td>
				<td>{{claim.programName}}</td>
				<td>{{claim.unitClaim}}</td>
				<td>{{claim.remainPayment | number:0}}</td>
				<td>{{claim.remainAllocation | number:0}}</td>
				<td>{{claim.createTime | date: 'MM/dd/yyyy @@ h:mma'}}</td>
			</tr>
		</tbody>
	</table>
	
	<!-- Another part: Number of item, page number -->
    <pagination total-items="totalItems" ng-model="filterCriteria.page" max-size="filterCriteria.pageSize" class="pagination-sm" ng-change="selectPage(page)">
    </pagination>
</div>
<form class="form-login" role="form">
    <h2 class="form-login-heading">Login</h2>
    <input type="text" class="form-control" placeholder="Username" ng-model="credentials.userName" required autofocus>
    <input type="password" class="form-control" placeholder="Password" ng-model="credentials.password" required>
    <button class="btn btn-lg btn-info btn-block" type="submit" ng-click="login()">Login</button>
    <div ng-hide="message == ''" class="alert alert-danger">
        {{message}}
    </div>
</form>


<form class="form-login" role="form">
    <h2 class="form-login-heading">Register</h2>
    <input type="text" class="form-control" placeholder="Username" ng-model="registerData.userName" required autofocus>
    <input type="password" class="form-control" placeholder="Password" ng-model="registerData.password" required>
    <input type="password" class="form-control" placeholder="Confirm Password" ng-model="registerData.confirmPassword" required>
    <button class="btn btn-lg btn-info btn-block" type="submit" ng-click="register()">Register</button>
    <div data-ng-hide="message == ''" class="alert alert-danger">
        {{registerData.message}}
    </div>
</form>